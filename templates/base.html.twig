<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SnowTricks{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
            <link href="//vjs.zencdn.net/7.8.2/video-js.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header>
                <nav class="row navbar navbar-expand-lg navbar-dark bg-primary">
                    <div class="col">
                      <a class="navbar-brand" href="{{path('tricks_index')}}"><img src="../public/img/logo-snowtricks-blanc.png" alt="logo SnowTricks" width="300"/></a>
                    </div>

                    <div class="col">
                      <button class="navbar-toggler float-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                      </button>
                      <div class="collapse navbar-collapse float-right" id="navbarTogglerDemo02">
                        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                          <li class="nav-item active">
                            <a class="nav-link text-dark" href="{{path('tricks_index')}}"><button type="button" class="btn btn-light text-nowrap">Accueil<span class="sr-only">(current)</span></button></a>

                          </li>
                          {% if app.user %}
                            <li class="nav-item">
                              <a class="nav-link text-dark" href="{{path('tricks_new')}}"><button type="button" class="btn btn-light text-nowrap">Ajouter une figure</button></a>

                            </li>
                            <li class="nav-item">
                              <a class="nav-link text-dark" href="{{path('app_userProfil')}}"><button type="button" class="btn btn-light text-nowrap">Mon profil</button></a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-dark" href="{{path('app_logout')}}"><button type="button" class="btn btn-danger text-nowrap">Se déconnecter</button></a>
                            </li>
                          {% else %}
                            <li class="nav-item">
                              <a class="nav-link text-dark" href="{{path('app_register')}}"><button type="button" class="btn btn-success text-nowrap">S'inscrire</button></a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link text-dark"href="{{path('app_login')}}"><button type="button" class="btn btn-warning text-nowrap">Se connecter</button></a>
                            </li>
                          {% endif %}
                        </ul>
                      </div>
                    </div>

                </nav>
            </header>

            <div class="card text-center">
              <div class="alert alert-primary font-weight-bold">
                  {% if app.user %}
                          Bienvenue {{ app.user.firstName }} ! Vous êtes connecté.
                  {% endif %}
              </div>
                <div class="alert alert-dark">
                    {% block pageTitle %}
                    {% endblock %}
                </div>

                <div class="bg-success text-center">
                    {% for infos, messages in app.flashes %}
                        {% for message in messages %}
                            <div role="alert">
                              <h2 class="text-white">{{message}}</h2>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>

            <div id="hero" class="">
                {% block hero %}
                {% endblock %}
            </div>

            <div id="content" class="container">
                {% block content %}
                {% endblock %}
            </div>

            <div id="commentContent" class="container">
                {% block commentContent %}
                {% endblock %}
            </div>


            <footer class="relative-bottom">
                <div class="card text-center">
                    <div class="card-footer text-muted">
                        {% block pageFooter %}
                        {% endblock %}
                    </div>
                </div>

                <div class="card-footer bg-primary text-white text-center">
                    <p>
                      Copyright | SnowTricks - 2020
                    </p>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/media.js') }}"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
            <script src="//vjs.zencdn.net/7.8.2/video.min.js"></script>
        {% endblock %}
    </body>
</html>
