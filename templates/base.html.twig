<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SnowTricks{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header>
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="{{path('tricks_index')}}">SnowTricks</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                  <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('tricks_index')}}">Accueil<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                      {% if app.user %}
                          <a class="nav-link" href="{{path('tricks_new')}}">Ajouter une figure</a>
                      {% endif %}
                    </li>
                    <li class="nav-item">
                      {% if app.user %}
                          <a class="nav-link" href="#">Mon profil</a>
                      {% endif %}
                    </li>
                    <a href="{{path('app_register')}}"><button type="button" class="btn btn-success">S'inscrire</button></a>
                    <a href="{{path('app_login')}}"><button type="button" class="btn btn-warning">Se connecter</button></a>
                      {% if app.user %}
                    <a href="{{path('app_logout')}}"><button type="button" class="btn btn-danger">Se déconnecter</button></a>
                      {% endif %}
                  </ul>
                </div>
                </nav>
            </header>

            <div class="bg-success">
                {% if app.user %}
                    <div class="mb-3 text-center">
                        Bienvenue {{ app.user.firstName }} ! Vous êtes connecté.
                    </div>
                {% endif %}
            </div>

            <div class="card text-center">
                <div class="card-header">
                    {% block pageTitle %}
                    {% endblock %}
                </div>

                <div class="bg-success text-center">
                    {% for infos, messages in app.flashes %}
                        {% for message in messages %}
                            <div role="alert">
                              <h2 class="text-white">{{message}}</h2>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>

            <div id="hero" class="">
                {% block hero %}
                {% endblock %}
            </div>

            <div id="content" class="container">
                {% block content %}
                {% endblock %}
            </div>

            <div id="commentContent" class="container">
                {% block commentContent %}
                {% endblock %}
            </div>


            <footer class="relative-bottom">
                <div class="card text-center">
                    <div class="card-footer text-muted">
                        {% block pageFooter %}
                        {% endblock %}
                    </div>
                </div>

                <div class="card-footer bg-primary text-white text-center">
                    <p>
                      Copyright | SnowTricks - 2020
                    </p>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/media.js') }}"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
