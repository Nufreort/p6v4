{% extends 'layoutDiscussion.html.twig' %}

{% block pageTitle %}<h1>{{trick.name}}</h1>{% endblock %}

{% block content %}

      <h2>Media : </h2>
      {% if trick.media %}
          {% for medium in trick.media %}
              <div>
                  <img src="{{ asset('../public/uploads/' ~ medium.name) }}" alt="Image" width="150">
              </div>
          {% endfor %}
      {% else %}
          <div>
              <img src="../public/img/snowboard-default.png" alt="Image" width="150">
          </div>
      {% endif %}

      <h2>Videos :</h2>
      {% if trick.videos %}
        <div>
          {{trick.videos|raw}}
        </div>
      {% endif %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de la figure : </th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Description : </th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Groupe : </th>
                <td>{{ trick.trickGroup }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tricks_edit', {'id': trick.id}) }}">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pen" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M5.707 13.707a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391L10.086 2.5a2 2 0 0 1 2.828 0l.586.586a2 2 0 0 1 0 2.828l-7.793 7.793zM3 11l7.793-7.793a1 1 0 0 1 1.414 0l.586.586a1 1 0 0 1 0 1.414L5 13l-3 1 1-3z"/>
            <path fill-rule="evenodd" d="M9.854 2.56a.5.5 0 0 0-.708 0L5.854 5.855a.5.5 0 0 1-.708-.708L8.44 1.854a1.5 1.5 0 0 1 2.122 0l.293.292a.5.5 0 0 1-.707.708l-.293-.293z"/>
            <path d="M13.293 1.207a1 1 0 0 1 1.414 0l.03.03a1 1 0 0 1 .03 1.383L13.5 4 12 2.5l1.293-1.293z"/>
        </svg>
    </a>
    {{ include('tricks/_delete_form.html.twig') }}

    <h2>Discussion</h2>
    <h3>Ajouter un message : </h3>
    <div>
      {{ include('comments/_form.html.twig') }}
    </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Photo</th>
                    <th>Auteur</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.createdAt|format_datetime('short', 'short', locale='fr') }}</td>
                    <td>
                      {% if comment.commentAuthor.usersPictures.name %}
                        <img src="usersPictures/{{comment.commentAuthor.usersPictures.name}}" width="100"/>
                      {% else %}
                          <img src="usersPictures/naruto.png" width="100"/>
                      {% endif %}
                    </td>
                    <td>{{ comment.commentAuthor.lastName ~ ' ' ~ comment.commentAuthor.firstName}}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        <a href="{{ path('comments_show', {'id': comment.id}) }}">Montrer</a>
                        <a href="{{ path('comments_edit', {'id': comment.id}) }}">Modifier</a>
                        {{ include('comments/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas encore de message à propos de cette figure. Soyez le premier à en laisser un !</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('tricks_index') }}">Retour à la page d'accueil</a>
{% endblock %}
