{% extends 'layoutDiscussion.html.twig' %}

{% block pageTitle %}Tricks{% endblock %}

{% block content %}
    <h1>Tricks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>TrickGroup</th>
                <td>{{ trick.trickGroup }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tricks_index') }}">back to list</a>

    <a href="{{ path('tricks_edit', {'id': trick.id}) }}">edit</a>

    {{ include('tricks/_delete_form.html.twig') }}

    <h2>Discussion</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>CommentAuthor</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        <a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
                        <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <h3>Ajouter un commentaire : </h3>
    <div>
      {{ include('comments/_form.html.twig') }}
    </div>
{% endblock %}
