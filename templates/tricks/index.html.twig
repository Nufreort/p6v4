{% extends 'layout.html.twig' %}

{% block pageTitle %}<h1>Accueil</h1>{% endblock %}

{% block hero %}
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner card bg-dark">
    <div class="carousel-item active">
      <img src="../public/img/snowboard-header.jpg" class="card-img" alt="..." style="opacity: 0.5">
      <div class="carousel-caption d-none d-md-block">
        <h5>T'es un roi de la glisse et tu veux veux le faire savoir ?</h5>
        <p>Alors rejoins la communauté et affiche tes plus beaux tricks !</p>
        <a class="btn btn-primary btn-lg align-self-center" href="{{path('app_register')}}" role="button">Inscris-toi !</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block content %}
        <div class="row">
          {% for trick in tricks %}
          <div class="col-md-4">
            <img src="../public/img/snowboard-default.png" class="card-img-top" alt="..." width="50">
            <h2><a href="{{ path('tricks_show', {'id': trick.id}) }}">{{ trick.name }}</a></h2>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">{{ trick.trickGroup }}</li>
            </ul>
            <p>{{  trick.description|u.truncate(200, '...') }}</p>
            <p><a href="{{ path('tricks_edit', {'id': trick.id}) }}">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pen" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M5.707 13.707a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391L10.086 2.5a2 2 0 0 1 2.828 0l.586.586a2 2 0 0 1 0 2.828l-7.793 7.793zM3 11l7.793-7.793a1 1 0 0 1 1.414 0l.586.586a1 1 0 0 1 0 1.414L5 13l-3 1 1-3z"/>
                    <path fill-rule="evenodd" d="M9.854 2.56a.5.5 0 0 0-.708 0L5.854 5.855a.5.5 0 0 1-.708-.708L8.44 1.854a1.5 1.5 0 0 1 2.122 0l.293.292a.5.5 0 0 1-.707.708l-.293-.293z"/>
                    <path d="M13.293 1.207a1 1 0 0 1 1.414 0l.03.03a1 1 0 0 1 .03 1.383L13.5 4 12 2.5l1.293-1.293z"/>
                </svg>
            </a>
            {{ include('tricks/_delete_form.html.twig') }}</p>
          </div>


        {% else %}
            <p>
              Pas encore de figure ajouté. Soyez le premier à en ajouter un !
            </p>
        {% endfor %}
        </div>
{% endblock %}
